

pipeline {
    agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        metadata:
          labels:
            name: inventoryplanner
        spec:
          containers:
          - name: docker
            image: myreg/docker:1
            command:
            - cat
            tty: true
      '''
    }
  }
    stages {

        // checkout and test

        stage('Build UI Docker Image') {
            steps {
                container('docker') {
                      sh 'dockerd & > /dev/null'
                      sleep(time: 10, unit: "SECONDS")
                      sh "docker build  -t myreg/myapp/ui:$BUILD_NUMBER ."
                      sh "docker push myreg/myapp/ui:$BUILD_NUMBER"
                }
            }
        }
    }
}